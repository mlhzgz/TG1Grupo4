<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesActivity">

    <TextView
        android:id="@+id/textViewDetallesTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETALLES TAREA"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <Spinner
        android:id="@+id/spinner_alumnos"
        android:layout_width="275dp"
        android:layout_height="29dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="163dp" />

    <EditText
        android:id="@+id/EditTextNota"
        android:layout_width="153dp"
        android:layout_height="41dp"
        android:hint="Introduce la nota"
        android:inputType="number"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="293dp" />

    <EditText
        android:id="@+id/EditTextComentario"
        android:layout_width="347dp"
        android:layout_height="130dp"
        android:hint="Escribe un comentario"
        android:gravity="top"
        android:inputType="text"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="369dp" />

    <Button
        android:id="@+id/buttonBorrar"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:text="Borrar"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="611dp" />

    <Button
        android:id="@+id/buttonGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:onClick="onclick"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="536dp" />
</androidx.constraintlayout.widget.ConstraintLayout>